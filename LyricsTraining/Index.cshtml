<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script>
        // 2. This code loads the IFrame Player API code asynchronously.
        var tag = document.createElement('script');

        tag.src = "https://www.youtube.com/iframe_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

        // 3. This function creates an <iframe> (and YouTube player)
        //    after the API code downloads.
        var player;
        function onYouTubeIframeAPIReady() {
            player = new YT.Player('player', {
                height: '360',
                width: '640',
                videoId: 'TzG9sr2Amik',
                events: {
                    'onReady': onPlayerReady,
                    'onStateChange': onPlayerStateChange
                }
            });
        }

        // 4. The API will call this function when the video player is ready.
        function onPlayerReady(event) {
            //event.target.playVideo();
        }

        // 5. The API calls this function when the player's state changes.
        //    The function indicates that when playing a video (state=1),
        //    the player should play for six seconds and then stop.
        var done = false;
        function onPlayerStateChange(event) {
            //if (event.data == YT.PlayerState.PLAYING && !done) {
            //  setTimeout(stopVideo, 6000);
            //  done = true;
            //}
        }
        function stopVideo() {
            player.stopVideo();
        }

        function playVideo() {
            player.playVideo();
            // getCurrentTime
            // loadVideoByUrl
            // pauseVideo
            // playVideoAt
            // seekTo
            // getPlayerState
        }

        function loadUrl() {
            player.loadVideoById($("#youtubeUrl").val(),0,'large');
        }

        $(document).keyup(function (event) {
            switch (event.keyCode)
            {
                case 32: //spacja
                    //-1 – unstarted(nie uruchomiono)
                    //0 – ended(zakończono)
                    //1 – playing(odtwarzanie)
                    //2 – paused(wstrzymano)
                    //3 – buffering(buforowanie)
                    //5 – video cued (film został wskazany)
                    if (player.getPlayerState() == 1)
                        player.pauseVideo();
                    else 
                        player.playVideo();

                    break;
                default:
                    break;
            }
            //alert('Handler for .keypress() called. - ' + event.keyCode);
        });

        $(document).ready(function () {
            $("#start").click(playVideo);
            $("#loadUrl").click(loadUrl);
        });

    </script>
</head>
<body>
    <!-- 1. The <iframe> (and video player) will replace this <div> tag. -->
    <div id="player"></div>

    <div class="row">
        <div class="col-md-8">
            <p>Youtube video URL</p>
            <input id="youtubeUrl" type="text" />
        </div>
        <div class="col-md-2">
            <input id="loadUrl" type="button" value="LoadUrl" />
        </div>
        <div class="col-md-2">
            <input id="start" type="button" value="Start/Stop" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="file" id="lyricsText"/>
        </div>
    </div>
</body>
</html>
